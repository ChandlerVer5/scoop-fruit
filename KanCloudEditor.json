{
	"homepage": "https://www.kancloud.cn/app",
	"version": "1.1.7",
	"description": "KanCloud Editor for md post editor!",
	"license": {
		"identifier": "Freeware"
	},
	"url": "https://app.kancloud.cn/desktop/KanCloudEditor-Setup-1.1.7.exe#/dl.7z",
	"bin": "KanCloud Editor.exe",
    "persist": "RoamingData",
    "shortcuts": [
        [ 
        	"KanCloud Editor.exe",
            "KanCloud Editor"
        ]
    ],
    "checkver": {
        "url": "https://www.kancloud.cn/app",
        "re": "<a href=\"https://app.kancloud.cn/desktop/KanCloudEditor-Setup-([\\d\\.]+).exe\" class"
    },
    "pre_install":[
        "extract_7zip \"$dir\\`$PLUGINSDIR\\app-64.7z\" \"$dir\"",
        "cmd /c mklink /J \"$env:APPDATA\\kancloud-editor\" \"$persist_dir\\RoamingData\""
    ],
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\" -Recurse",
    "uninstaller": {
        "script": [
            "if ((Get-Item -Path \"$env:APPDATA\\kancloud-editor\" -Force).LinkType -eq \"Junction\") {",
            "   Remove-Item \"$env:APPDATA\\kancloud-editor\" -Force -Recurse",
            "   Remove-Item \"$persist_dir\" -Force -Recurse",
            "}"
        ]
    },
	"autoupdate": {
        "url": "https://app.kancloud.cn/desktop/KanCloudEditor-Setup-$version.exe"
    }
}
