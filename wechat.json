{
	"homepage": "https://pc.weixin.qq.com",
	"version": "2.6.6",
	"description": "微信 PC 版 一款跨平台的通讯工具。支持单人、多人参与。通过手机网络发送语音、图片、视频和文字。",
	"license": {
		"identifier": "Freeware"
	},
	"url": "https://dldir1.qq.com/weixin/Windows/WeChatSetup.exe#/dl.7z",
	"bin": "WeChat.exe",
    "persist": ["RoamingData","TMPData"],
    "shortcuts": [
        [ 
        	"WeChat.exe",
            "微信"
        ]
    ],
    "checkver": {
        "url": "https://pc.weixin.qq.com",
        "re": "> 微信 PC 版 ([\\d\\.]+) </div>"
    },
    "pre_install":[
        "cmd /c mklink /J \"$env:APPDATA\\Tencent\\WeChat\" \"$persist_dir\\RoamingData\"",
        "cmd /c mklink /J \"$env:TMP\\WeChat Files\" \"$persist_dir\\TMPData\""
    ],
    "post_install": "Remove-Item \"$dir\\`$PLUGINSDIR\" -Recurse",
    "uninstaller": {
        "script": [
            "if ((Get-Item -Path \"$env:TMP\\WeChat Files\" -Force).LinkType -eq \"Junction\") {",
            "   Remove-Item \"$env:APPDATA\\Tencent\\WeChat\" -Force -Recurse",
            "   Remove-Item \"$env:TMP\\WeChat Files\" -Force -Recurse",
            "   Remove-Item \"$persist_dir\" -Force -Recurse",
            "}"
        ]
    },
	"autoupdate": {
        "url": "https://dldir1.qq.com/weixin/Windows/WeChatSetup.exe"
    }
}